#**********************************************************
#
#	user design
#**********************************************************

# DEBUG can be set to YES to include debug info, or NO otherwise
DEBUG		:= YES
DEFS		:= 
ROOT_DIR    := ../..
PROJECT_DIR := 
ifeq (YES, $(DEBUG))
     OUTPUT	:= $(ROOT_DIR)/lib/libnet.so
else 
     OUTPUT	:= $(ROOT_DIR)/liblibnet.so
endif

INCS	:= -I$(ROOT_DIR)/include
LIBS	:= -ldl -lpthread\
           -L$(ROOT_DIR)/lib/ -lhelper

#**********************************************************

CXX		:= g++
LD		:= g++
AR		:= ar rc
RANLIB	:= ranlib

DEBUG_CXXFLAGS		:= -Wall -g -DDEBUG -Wno-deprecated
RELEASE_CXXFLAGS	:= -Wall -O3 -DNDEBUG

DEBUG_LDFLAGS		:= -g -fno-rtti -fno-exceptions
RELEASE_LDFLAGS		:=

ifeq (YES, $(DEBUG))
	CXXFLAGS		:= $(DEBUG_CXXFLAGS) $(DEFS)
	LDFLLAGS		:= $(DEBUG_LDFLAGS) $(DEFS)
else
	CXXFLAGS		:= $(RELEASE_CXXFLAGS) $(DEFS)
	LDFLLAGS		:= $(RELEASE_CSSFLAGS) $(DEFS)
endif

all:$(OUTPUT)
	$(info make: $(OUTPUT) success!)

SRCS	:= $(wildcard *.cpp)

OBJS	:= $(addsuffix .o, $(basename $(SRCS)))

#**********************************************************
#	OUTPUT
#**********************************************************
include $(subst .cpp,.d,$(SRCS))

%.d : %.cpp
	$(CXX) -M $(CPPFLAGS) $(INCS) $< > $@.$$$$; \
	sed 's,\($*\)\.o[ :]*,\1.o $@ : ,g' < $@.$$$$ > $@; \
	rm -f $@.$$$$;
	
$(OUTPUT):$(OBJS)
	$(LD) -o $@ -shared $(CXXFLAGS) $(OBJS) $(LIBS)
	
#**********************************************************
#	common rule
#**********************************************************

%.o : %.cpp
	$(CXX) -c -fPIC $(CXXFLAGS) $(INCS) $<

clean:
	rm -f $(OBJS) $(OUTPUT)
